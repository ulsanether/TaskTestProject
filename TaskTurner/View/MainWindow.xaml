<Window x:Class="TaskTurner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTurner"
        mc:Ignorable="d"
        Title="MainWindow" Height="832" Width="1280" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="445"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>
        <!--Nav pane-->
        <Rectangle Fill="{StaticResource AccentDark}"/>

        <!-- Task List Background-->
        <Rectangle Fill="{StaticResource TaskListBackground}" Grid.Column="1"/>


        <!-- Task List Grid =-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!-- Task Label-->
            <Label Style="{StaticResource Heading1}"
             Content="Tasks"
             VerticalAlignment="Center" 
             Padding="20 0 0 0"
             IsHitTestVisible="False"/>
            <!-- Add new Task button -->
            <Button Style="{StaticResource RoundAccentButton}"
             HorizontalAlignment="Right"
             VerticalAlignment="Center"
             Height="40" 
             Width="40"
             Margin="0,0,20,0" >

                <!--Icon -->
                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>
            <TextBox Style="{StaticResource TaskListSerachBox}" Grid.Row="1" Margin="20 0"/>
            <Button Grid.Row="1" HorizontalAlignment="Right" Margin="0 0 40 0"  Padding="5">
                <Viewbox>
                    <Path Data="{StaticResource SerchIcon}" Fill="{StaticResource OnAccent}"/>
                </Viewbox>
            </Button>
        </Grid>
        <!-- Task Status Bar-->
        <Rectangle Fill="{StaticResource TaskStatusBackground}" Grid.Column="3"/>


    </Grid>
</Window>
