<Window
    x:Class="TaskTurner.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskTurner"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1280"
    Height="832"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="445" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="140" />
        </Grid.ColumnDefinitions>
        <!--  Nav pane  -->
        <Rectangle Fill="{StaticResource AccentDark}" />

        <!--  Task List Background  -->
        <Rectangle Grid.Column="1" Fill="{StaticResource TaskListBackground}" />


        <!--  Task List Grid =  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="60" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!--  Task Label  -->
            <Label
                Padding="20,0,0,0"
                VerticalAlignment="Center"
                Content="Tasks"
                IsHitTestVisible="False"
                Style="{StaticResource Heading1}" />
            <!--  Add new Task button  -->
            <Button
                Width="40"
                Height="40"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Style="{StaticResource RoundAccentButton}">

                <!--  Icon  -->
                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource NewTaskIcon}" Fill="{StaticResource OnAccent}" />
                </Viewbox>
            </Button>
            <TextBox
                x:Name="TextSerchBox"
                Grid.Row="1"
                Margin="20,0"
                Style="{StaticResource TaskListSerachBox}" />

            <Label
                Grid.Row="1"
                Margin="40,0,0,0"
                VerticalAlignment="Center"
                Content="Search Tadsk..."
                Cursor=""
                Foreground="{StaticResource Borders}"
                IsHitTestVisible="False"
                Visibility="{Binding Text.IsEmpty, ElementName=TextSerchBox, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Button
                Grid.Row="1"
                Width="30"
                Height="30"
                Margin="0,0,30,0"
                Padding="5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="White"
                BorderBrush="Transparent"
                Style="{StaticResource SerchButton}">

                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource SerchIcon}" Fill="{StaticResource Borders}" />
                </Viewbox>
            </Button>

            <!--  List View  -->
            <ListView
                Grid.Row="2"
                Margin="0,20"
                Background="Transparent"
                BorderBrush="Transparent" />
        </Grid>
        <!--  Task Viewer  -->

        <Grid Grid.Column="2" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="230" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!--  Task Details  -->

            <Grid Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>


                <!--  Importance Title  -->
                <TextBlock
                    VerticalAlignment="Center"
                    Style="{StaticResource Title}"
                    Text="Task Title" />
                <!--  Importance badge  -->
                <Border
                    Padding="20,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="{StaticResource Importance-Crit}"
                    CornerRadius="5">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Normal"
                        Foreground="Black"
                        Text="Cretical" />
                </Border>

                <!--  Description scroll viewer  -->
                <ScrollViewer
                    Grid.Row="1"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <!--  Description  -->
                    <TextBlock
                        Margin="0,20"
                        FontSize="16"
                        Foreground="{StaticResource PlaceholderText}"
                        Text="This is a short description test...." />
                </ScrollViewer>
            </Grid>
        </Grid>


        <!--  Task Status Bar  -->
        <Rectangle Grid.Column="3" Fill="{StaticResource TaskStatusBackground}" />


    </Grid>
</Window>
