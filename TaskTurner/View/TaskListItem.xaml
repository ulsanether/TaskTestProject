<UserControl
    x:Class="TaskTurner.View.TaskListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TaskTurner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="145"
    d:DesignWidth="435"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="38" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="20,0"
            VerticalAlignment="Center"
            Style="{StaticResource Title}"
            Text="Title" />

        <!--  Importance Badge  -->
        <Border
            Height="23"
            Margin="0,0,10,0"
            Padding="40,0"
            HorizontalAlignment="Right"
            Background="{StaticResource PlaceholderBorder}"
            CornerRadius="3">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="{StaticResource PlaceholderBorderText}"
                Text="Category" />
        </Border>

        <!--  Description  -->
        <TextBlock
            Grid.Row="1"
            Margin="20,0,5,0"
            Foreground="{StaticResource TaskListUCText}"
            Text="어쩌고 저쩌고 어쩌고 저쩌고어쩌고 저쩌고어쩌고 저쩌고어쩌고 저쩌고 저쩌고어쩌고 저쩌고저쩌고어쩌고 저쩌고저쩌고어쩌고 저쩌고저쩌고어쩌고 저쩌고"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="2"
            Margin="20,0"
            VerticalAlignment="Center"
            Foreground="{StaticResource TaskListUCTitle}"
            Text="Due: 12/12/12" />
    </Grid>
</UserControl>
